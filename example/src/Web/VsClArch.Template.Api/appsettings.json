{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenApiInfoSettings": {
    "Title": "Open Api Title",
    "Summary": "Read Documentation from SCALAR"
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "IncludeErrorDetails": true,
        "RequireHttpsMetadata": true,
        "TokenValidationParameters": {
          "ValidateIssuerSigningKey": true,
          "RequireSignedTokens": true,
          "ValidateIssuer": true,
          "ValidateAudience": true,
          "ValidIssuer": "your-issuer",
          "ValidAudience": "your-audience",
          "IssuerSigningKeyString": "wJalv8d9L/K2A/V3q+p4bZ5cQ8eF7gR6iT3sN0mY5Zg=",
          "ClockSkewInSeconds": 0
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Enrichers.Sensitive",
      "Serilog.Exceptions"
    ],
    "Enrich": [
      { "Name": "WithExceptionDetails" },
      {
        "Name": "WithSensitiveDataMasking",
        "Args": {
          "options": {
            "MaskValue": "***SECRET***",
            "MaskProperties": [
              {
                "Name": "password"
              },
              {
                "Name": "Authorization",
                "Options": {
                  "ShowFirst": 7,
                  "PreserveLength": false
                }
              }
            ],
            "Mode": "Globally"
          }
        }
      }
    ],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "rollingInterval": "Day",
              "path": "/Users/macintoks/Documents/Logs/VsClArch.Template.Api/VsClArch.Template.Api_.txt",
              "outputTemplate": "{Timestamp:G} [{Level}] ({XRequestId}) {Message:lj} ({SourceContext}){NewLine}{Exception}",
              "retainedFileCountLimit": null,
              "rollOnFileSizeLimit": true
            }
          },
          {
            "Name": "Console",
            "Args": {
              "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
              "outputTemplate": "{Timestamp:G} [{Level}] ({XRequestId}) {Message:lj} ({SourceContext}){NewLine}{Exception}"
            }
          }
        ]
      }
    },
    "Properties": {
      "ApplicationName": "VsClArch.Template.Api"
    }
  },
  "Integrations": {
    "TodoJsonPlaceholderSettings": {
      "BaseUrl": "https://jsonplaceholder.typicode.com",
      "Actions": {
        "GetUsers": "/users"
      }
    }
  }
}
